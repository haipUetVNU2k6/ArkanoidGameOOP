<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.arkanoidgameoop.controller.GameOverCtrl"
            prefWidth="600" prefHeight="800" stylesheets="@../css/style.css">
    <children>
        <VBox alignment="CENTER" layoutX="150" layoutY="200" spacing="20" prefWidth="300">
            <Label text="GAME OVER" styleClass="title-label"/>
            <Button text="Restart" onAction="#onRestart" styleClass="menu-button"/>
            <Button text="Menu" onAction="#onMenu" styleClass="menu-button"/>
        </VBox>
    </children>
</AnchorPane>
