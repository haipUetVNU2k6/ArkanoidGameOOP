<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.arkanoidProject.state_controller.controller.ChangeAccountCtrl"
           stylesheets="@../css/changeAccount.css"
           fx:id="root">

    <VBox spacing="30" alignment="CENTER">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Title -->
        <Text fx:id="title" text="ACCOUNT MANAGEMENT" styleClass="title-text"/>

        <!-- Section: Switch Account -->
        <VBox spacing="15" alignment="CENTER">
            <Text text="Select Account:" styleClass="subtitle-text"/>
            <HBox spacing="10" alignment="CENTER">
                <ComboBox fx:id="userComboBox" prefWidth="200"/>
                <Button text="Switch Account" fx:id="switchButton" styleClass="menu-button" onAction="#onSwitch"/>
            </HBox>
        </VBox>

        <!-- Section: Create New Account -->
        <VBox spacing="15" alignment="CENTER">
            <Text text="Create New Account:" styleClass="subtitle-text"/>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="newAccountTextField" promptText="Enter username" prefWidth="200"/>
                <Button text="New Account" fx:id="newButton" styleClass="menu-button" onAction="#onCreate"/>
            </HBox>
        </VBox>

    </VBox>

</StackPane>
