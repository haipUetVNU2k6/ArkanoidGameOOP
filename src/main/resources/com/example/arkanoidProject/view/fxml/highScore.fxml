<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.arkanoidProject.state_controller.controller.HighScoreCtrl"
           stylesheets="@../css/highScore.css"
           fx:id="root">

    <!-- Background overlay (semi-transparent) -->
    <VBox styleClass="overlay-background"/>

    <!-- Main content box -->
    <VBox alignment="CENTER"
          spacing="25"
          styleClass="high-score-root"
          maxWidth="750"
          maxHeight="520">

        <padding>
            <Insets top="20" right="25" bottom="20" left="25"/>
        </padding>

        <!-- Title -->
        <Label text="HIGH SCORES" styleClass="title"/>

        <!-- TableView with fixed height for 6 rows -->
        <TableView fx:id="scoreTable"
                   styleClass="score-table"
                   fixedCellSize="45"
                   prefHeight="310"
                   maxHeight="310"
                   VBox.vgrow="NEVER">

            <columns>
                <!-- Username Column -->
                <TableColumn fx:id="usernameColumn"
                             text="Player"
                             prefWidth="110"
                             sortable="true"/>

                <!-- Level Columns -->
                <TableColumn fx:id="level1Column"
                             text="Lv1"
                             prefWidth="70"
                             sortable="true"
                             styleClass="level-column"/>

                <TableColumn fx:id="level2Column"
                             text="Lv2"
                             prefWidth="70"
                             sortable="true"
                             styleClass="level-column"/>

                <TableColumn fx:id="level3Column"
                             text="Lv3"
                             prefWidth="70"
                             sortable="true"
                             styleClass="level-column"/>

                <TableColumn fx:id="level4Column"
                             text="Lv4"
                             prefWidth="70"
                             sortable="true"
                             styleClass="level-column"/>

                <TableColumn fx:id="level5Column"
                             text="Lv5"
                             prefWidth="70"
                             sortable="true"
                             styleClass="level-column"/>

                <TableColumn fx:id="level6Column"
                             text="Lv6"
                             prefWidth="70"
                             sortable="true"
                             styleClass="level-column"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <!-- Back Button -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Back to Menu"
                    onAction="#onBackToMenu"
                    styleClass="back-button"/>
        </HBox>

    </VBox>
</StackPane>