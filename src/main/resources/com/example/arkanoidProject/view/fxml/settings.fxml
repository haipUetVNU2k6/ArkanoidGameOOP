<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.arkanoidProject.state_controller.controller.SettingsCtrl"
           stylesheets="@../css/settings.css"
           fx:id="root">

    <!-- Background má» -->
    <VBox fx:id="backgroundPane" styleClass="pane-background"
          maxWidth="600" maxHeight="450"/>

    <!-- Ná»™i dung chÃ­nh -->
    <VBox spacing="20" alignment="CENTER" styleClass="settings-container"
          maxWidth="600" maxHeight="450">

        <!-- TiÃªu Ä‘á» -->
        <Text text="SETTINGS" styleClass="title-text">
            <VBox.margin>
                <Insets bottom="20"/>
            </VBox.margin>
        </Text>

        <!-- Volume Control -->
        <VBox spacing="15" alignment="CENTER" styleClass="volume-section">
            <Label fx:id="volumeLabel" text="Volume: 70%" styleClass="volume-label"/>

            <Slider fx:id="volumeSlider"
                    min="0" max="100"
                    blockIncrement="5"
                    showTickMarks="true"
                    showTickLabels="true"
                    majorTickUnit="25"
                    minorTickCount="4"
                    styleClass="volume-slider"
                    prefWidth="400"/>
        </VBox>

        <!-- Mute Button -->
        <Button fx:id="btnMute"
                text="ðŸ”Š Mute"
                styleClass="settings-button"
                onAction="#onMuteToggle"/>

        <!-- Back Button -->
        <Button fx:id="btnBack"
                text="Back"
                styleClass="back-button"
                onAction="#onBack">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
        </Button>

    </VBox>

</StackPane>