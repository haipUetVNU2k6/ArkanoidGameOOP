<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.arkanoidProject.state_controller.controller.MenuCtrl"
            prefWidth="900" prefHeight="600"
            stylesheets="@../css/menu.css"
            fx:id="root">

    <!-- Tiêu đề -->
    <Text fx:id="title" text="ARKANOID" layoutX="250" layoutY="150" styleClass="title-text"/>

    <!-- VBox chứa các nút menu -->
    <VBox spacing="25" layoutX="350" layoutY="220" alignment="CENTER">

        <Button text="Start Game" fx:id="btnStart" styleClass="menu-button" onAction="#onPLay"/>
        <Button text="High Scores" fx:id="btnScores" styleClass="menu-button" onAction="#onHighScores"/>
        <Button text="Settings" fx:id="btnSettings" styleClass="menu-button" onAction="#onSetting"/>
        <Button text="Exit" fx:id="btnExit" styleClass="menu-button" onAction="#onExit"/>
    </VBox>

    <!-- Footer thông tin nhỏ -->
    <Text text="© 2025 - Your Studio Name" layoutX="350" layoutY="580" styleClass="footer-text" />

</AnchorPane>