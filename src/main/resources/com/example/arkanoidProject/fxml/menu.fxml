<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>


<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.arkanoidProject.state_controller.controller.MenuCtrl"
           prefHeight="800" prefWidth="100"
           stylesheets="@../css/menu.css"
           fx:id="root">

    <VBox spacing="25" alignment="CENTER">

        <!-- Tiêu đề -->

        <Text fx:id="title" text="ARKANOID" styleClass="title-text">
            <VBox.margin>
                <Insets top="0" right="0" bottom="60" left="0"/>
            </VBox.margin>
        </Text>

        <!-- Các nút menu -->
        <Button text="Start Game" fx:id="btnStart" styleClass="menu-button" onAction="#onPLay"/>
        <Button text="High Scores" fx:id="btnScores" styleClass="menu-button" onAction="#onHighScores"/>
        <Button text="Settings" fx:id="btnSettings" styleClass="menu-button" onAction="#onSetting"/>
        <Button text="Exit" fx:id="btnExit" styleClass="menu-button" onAction="#onExit"/>

    </VBox>

</StackPane>
